{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "DOM.Iterable", "ES2020"],
        "module": "ES2020",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./app/*"],
            "a/*": ["./app/asset/*"]
        },
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"]
}
